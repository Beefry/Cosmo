@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.isFormBuilder = true;
}

<h2>Edit</h2>
@{
    //Passing in nullable int (int?)
    if (Model != null)
    {
        @Html.Raw(String.Format(Beefry.FormBuilder.Form.FormDisplayEditDirective, Model))
    }
    else
    {
        <div>Error, no Form ID was provided.</div>
    }
}