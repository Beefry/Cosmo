<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body ng-app="beefry.fb">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Beefry&reg; FormBuilder", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Templates", "Index", "FormBuilder")</li>
                    <li>@Html.ActionLink("Forms", "Index", "Form")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.10.1/jquery-ui.min.js"></script>
            @{ if (ViewBag.isFormBuilder != null) {
            @Scripts.Render("~/bundles/formbuilder")
            <script>angular.module('formbuilder').constant('templateAPIPath','@ViewBag.FormAPIPath');</script>
            <script>angular.module('formdisplayer').constant('formAPIPath','@ViewBag.FormAPIPath');</script>
            <script>angular.module('formbuilder').constant('redirectPath','@ViewBag.redirectPath');</script>
        }
    }
    @RenderSection("scripts", required: false)
</body>
</html>
